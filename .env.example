# GameVault Frontend Environment Configuration Template
# ==================================================
# Copy this file to .env and update the values for your environment

# API Configuration
VITE_API_DEV_BASE_URL=http://localhost:8080
VITE_API_PROD_BASE_URL=https://your-backend-domain.com

# API Endpoints
VITE_API_USERS_ENDPOINT=/api/users
VITE_API_GAMES_ENDPOINT=/api/games
VITE_API_CART_ENDPOINT=/api/cart
VITE_API_WISHLIST_ENDPOINT=/api/wishlist

# Application Configuration
VITE_APP_NAME=GameVault
VITE_APP_VERSION=1.0.0

# Security Configuration
VITE_TOKEN_EXPIRY_HOURS=24

# Feature Flags
VITE_ENABLE_DEBUG_MODE=false
VITE_ENABLE_ANALYTICS=false

# Third-party Service Keys (add your keys here)
# VITE_STRIPE_PUBLIC_KEY=
# VITE_GOOGLE_ANALYTICS_ID=